<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>

<BorderPane fx:controller="com.example.javafx.HelloController"
            xmlns:fx="http://javafx.com/fxml" >
    <top>
        <Label text="This label is top" alignment="center"/>
    </top>
    <center>
        <Label  text="This label is center" alignment="center"/>
    </center>
    <left>
        <Label  text="This label is left" alignment="center"/>
    </left>
    <right>
        <Label  text="This label is right" alignment="center"/>
    </right>
    <bottom>
        <HBox spacing="10" alignment="TOP_RIGHT">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Button text="Hello!" onAction="#onHelloButtonClick"/>
            <Button text="Okay"></Button>
        </HBox>
    </bottom>
</BorderPane>


